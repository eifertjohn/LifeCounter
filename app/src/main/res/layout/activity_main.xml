<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtFirstLife"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btnFirstDecrease"
        android:layout_toEndOf="@+id/btnFirstDecrease"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtSecondLife"
        android:layout_alignTop="@+id/txtFirstLife"
        android:layout_toLeftOf="@+id/btnSecondIncrease"
        android:layout_toStartOf="@+id/btnSecondIncrease"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnIncreaseLife"
        android:id="@+id/btnSecondIncrease"
        android:layout_above="@+id/txtSecondLife"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnDecreaseLife"
        android:id="@+id/btnSecondDecrease"
        android:layout_below="@+id/txtSecondLife"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnIncreaseLife"
        android:id="@+id/btnFirstIncrease"
        android:layout_above="@+id/txtFirstLife"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnDecreaseLife"
        android:id="@+id/btnFirstDecrease"
        android:layout_below="@+id/txtFirstLife"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnNewGame"
        android:id="@+id/btnNewGame"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnNewGame"
        android:layout_alignStart="@+id/btnNewGame" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnNewGame"
        android:layout_alignEnd="@+id/btnNewGame" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/defaultName"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/checkBox"
        android:layout_toStartOf="@+id/checkBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/defaultName"
        android:ems="10"
        android:id="@+id/editText2"
        android:gravity="right"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/checkBox2"
        android:layout_toEndOf="@+id/checkBox2" />

</RelativeLayout>
